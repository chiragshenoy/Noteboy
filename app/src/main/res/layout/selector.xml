<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lib="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activities.Selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/mytoolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:minHeight="?attr/actionBarSize"
                android:title="">

                <TextView
                    android:id="@+id/frombundle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/loaderSelect"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/text_secondary"
                    android:textSize="24sp"
                    android:transitionName="@string/transtion_name" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/selector_content" />


            <com.github.glomadrian.loadingballs.BallView
                android:id="@+id/loaderSelect"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                lib:ball_colors="@array/colors"
                lib:balls="3"
                lib:enable_size_animation="true"
                lib:max_ball_size="12dp"
                lib:min_ball_size="5dp"
                lib:movement_cycle_time="1500"
                lib:path="triangle"
                lib:size_cycle_time="500">

            </com.github.glomadrian.loadingballs.BallView>

        </FrameLayout>


    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="10dp"
        android:background="#536DFE"
        android:elevation="0dp"
        app:backgroundTint="@color/primary_light"
        app:borderWidth="0dp"
        app:elevation="3dp"
        app:fab_icon="@mipmap/go"
        app:layout_behavior="noteboy.noteboy.Helpers.FloatingActionButtonBehavior" />


</android.support.design.widget.CoordinatorLayout>

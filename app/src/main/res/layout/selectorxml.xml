<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lib="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="profile"
        android:textSize="30dp"

        android:layout_above="@+id/loaderSelect"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:id="@+id/frombundle" />



    <com.github.glomadrian.loadingballs.BallView
        android:id="@+id/loaderSelect"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        lib:ball_colors="@array/colors"
        lib:balls="3"
        lib:enable_size_animation="true"
        lib:max_ball_size="12dp"
        lib:min_ball_size="5dp"
        lib:movement_cycle_time="1500"
        lib:path="triangle"
        lib:size_cycle_time="500"></com.github.glomadrian.loadingballs.BallView>



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/frombundle"
    android:layout_centerHorizontal="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:id="@+id/llSelector">

        <com.antonionicolaspina.revealtextview.RevealTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:duration="2000"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            app:text="You are from the branch : "/>

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:ms_arrowColor="#0000FF"

        app:ms_arrowSize="16dp"
        app:ms_floatingLabelColor="#00FF00"
        app:ms_floatingLabelText="You have selected your branch,select year"
        app:ms_hint="Select your branch"
        app:ms_multiline="true" />

        <com.antonionicolaspina.revealtextview.RevealTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:duration="2000"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            app:text="and year : "/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/traingle"
        android:layout_above="@+id/wheelview"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        />

    <com.lukedeighton.wheelview.WheelView
        android:id="@+id/wheelview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:wheelColor="#4c4cFF"
        app:rotatableWheelDrawable="false"
        app:selectionAngle="90.0"
        app:wheelOffsetY="0dp"
        app:repeatItems="true"
        app:wheelRadius="100dp"
        app:wheelItemCount="4"
        app:wheelPadding="0dp"
        app:wheelItemRadius="25dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bIntent"
            android:layout_below="@+id/wheelview"/>
    </LinearLayout>

</ScrollView>




</RelativeLayout>